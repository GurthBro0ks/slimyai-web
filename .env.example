# ============================================================================
# SlimyAI Web Application Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env files to version control

# ============================================================================
# Next.js Configuration
# ============================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Build settings
NEXT_BUILD_ID=
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=slimy.ai

# ============================================================================
# API Configuration
# ============================================================================
# Admin API base URL
NEXT_PUBLIC_ADMIN_API_BASE=http://localhost:3080

# Snelp codes API
NEXT_PUBLIC_SNELP_CODES_URL=https://snelp.com/api/codes

# ============================================================================
# MCP (Model Context Protocol) Configuration
# ============================================================================
MCP_BASE_URL=http://localhost:3100
MCP_API_KEY=your_mcp_api_key_here

# ============================================================================
# OpenAI Configuration for Slime Chat
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1

# ============================================================================
# Documentation Import Settings
# ============================================================================
DOCS_SOURCE_REPO=owner/docs-repo
DOCS_SOURCE_PATH=docs
GITHUB_TOKEN=your_github_token_here

# ============================================================================
# Development & Testing
# ============================================================================
# Enable CI mode for tests
CI=false

# Playwright test settings
PLAYWRIGHT_DEBUG=false

# Vitest settings
VITEST_MAX_WORKERS=4

# ============================================================================
# Build & Deployment
# ============================================================================
# Docker build arguments
BUILDKIT_INLINE_CACHE=1

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=
